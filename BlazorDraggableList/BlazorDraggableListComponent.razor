@namespace BlazorDraggableList

@inherits BlazorDraggableListBase<TItemGeneric>

@typeparam TItemGeneric

<style>

    .draggable-item {
        cursor: grab;
    }

    .dropzone {
        position: absolute;
        z-index: 1;
        display: none;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
        background-color: rgba(255,216,0,0.3);
        border: 3px dashed #ff006e;
    }

    .active-dropzone {
        background-color: rgba(76, 255, 0, 0.3);
    }

</style>

<section class="blazor-draggable-list">

    <div class="@Class">

        @for (int i = 0; i < Items.Count(); i++)
        {

            var temp = i;

            <div class="position-relative border-bottom border-primary">

                <div id="blazor-draggable-list-item-@temp" class="draggable-item" draggable="true" ondragstart="blazordraggablelist_dragstart(event)">
                    @BlazorDraggableListItem(Items[temp])
                </div>

                <div id="blazor-draggable-list-item-dropzone-@temp" class="dropzone dropzone-@temp" ondragover="blazordraggablelist_dragover(event)" ondrop="blazordraggablelist_drop(event)" ondragenter="blazordraggablelist_dragenter(event)" ondragleave="blazordraggablelist_dragleave(event)" />

            </div>
        }

    </div>

</section>

